Vagrant.configure("2") do |config|
  config.vm.box = "generic/alpine319"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = 2048
    vb.cpus = 2
  end

  config.vm.synced_folder ".", "/work"

  config.vm.provision "shell", inline: <<-SHELL
    set -euo pipefail

    echo "[+] Installing build dependencies (Alpine 3.19)..."

    apk update

    apk add --no-cache \
      bash \
      curl \
      xorriso \
      tar \
      gzip \
      util-linux \
      e2fsprogs \
      parted \
      dosfstools \
      coreutils \
      gawk \
      sed \
      grep \
      findutils \
      apk-tools

    echo "[+] Alpine 3.19 builder ready"
  SHELL
end
